<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/debug_info_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/window_background"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_reel"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_16dp">

        <TextView
            android:id="@+id/error_quote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            tools:text="It is better to travel well than to arrive. Unless you are going to hospital."/>

        <TextView
            android:id="@+id/error_quote_author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_quote"
            android:layout_marginTop="@dimen/margin_16dp"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text="-Buddha"/>

        <TextView
            android:id="@+id/error_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_quote_author"
            android:layout_centerInParent="true"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            tools:text="We seem to have broken stuff. Again."/>

        <Button
            android:id="@+id/error_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:background="?attr/selectableItemBackground"
            android:text="@string/button_label_error_try_again"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>